{
	"compilerOptions": {
		"target": "es6",
		"module": "esnext",
		"outDir": "./dist",
		"rootDir": "./src",
		"strict": true,
		"esModuleInterop": true,
		"moduleResolution": "node",
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"sourceMap": true
	},
	"include": [
		"src/scripts/*.ts"
	],
	"exclude": [
		"node_modules"
	]
}